        <script is:inline>
          // Send a visit increment request to the backend API
          // local add define:vars={{ apiUrl }} to script and fetch
          fetch('/api/count', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              Host: 'resume-backend-svc',
            },
            body: JSON.stringify({ timestamp: new Date() }),
          })
            .then((response) => {
              if (!response.ok) {
                throw new Error(`HTTP error! Status: ${response.status}`);
              }
              return response.json();
            })
            .catch((error) => {
              console.error('Error incrementing visit count:', error);
            });
